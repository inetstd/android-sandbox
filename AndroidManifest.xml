            </intent-filter>
        </activity>
        <activity
            android:name=".PullToRefreshActivity"
            android:label="@string/app_name" >            
        </activity>
        <activity
            android:name=".rss.activities.RSSReaderActivity"
            android:label="@string/app_name" >            
        </activity>
        <activity
            android:name=".rss.activities.RSSViewActivity"
            android:label="@string/app_name" >            
